{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint"],
    "rules": {
        "indent": ["warn", 4],
        "no-trailing-spaces": [1],
        "semi": ["warn", "never"],
        "quotes": ["warn", "single"]
    }
}
